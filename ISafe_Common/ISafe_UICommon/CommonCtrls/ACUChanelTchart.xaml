<UserControl x:Class="ISafe_UICommon.CommonCtrls.ACUChanelTchart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uctrl="clr-namespace:ISafe_UICommon.CommonCtrls"
             mc:Ignorable="d" 
             x:Name="usercontrol"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <GroupBox BorderBrush="Green" BorderThickness="2">
            <GroupBox.Header>
                <WrapPanel Orientation="Horizontal">
                    <Image Height="25" Width="25" Margin="15,0,15,0" Source="/ISafe_UICommon;component/Images/delete.png" MouseLeftButtonDown="Image_MouseLeftButtonDown_1"/>
                    <TextBlock FontSize="15" FontWeight="Black" Text="所属ACU站点：" VerticalAlignment="Center"/>
                    <TextBlock FontSize="15" FontWeight="Black" Text="{Binding ElementName=usercontrol,Path=ACUName}" VerticalAlignment="Center"/>
                </WrapPanel>
            </GroupBox.Header>
            <Grid>
                <uctrl:MyTchart Margin="0,8,0,0" x:Name="tchart"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
