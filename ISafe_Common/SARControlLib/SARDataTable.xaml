	<UserControl.Resources>	
        <Style x:Name="ColumnStyle" x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background">
            	<Setter.Value>
            		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            			<GradientStop Color="#FF010B17" Offset="1"/>
            			<GradientStop Color="#FF5777A7" Offset="0"/>
            			<GradientStop Color="#FF0D284F" Offset="0.506"/>
            		</LinearGradientBrush>
            	</Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#FFDBDBDB"/>
            <Setter Property="FontFamily" Value="Microsoft YaHei"/>
            <Setter Property="FontSize" Value="13.333"/>
			<Setter Property="BorderThickness">
				<Setter.Value>
					<Thickness Top="0" Left="0" Right="1" Bottom="0">						
					</Thickness>
				</Setter.Value>
			</Setter>
            <Setter Property="Padding">
                <Setter.Value>
                    <Thickness Top="0" Left="12" Right="0" Bottom="0">
                    </Thickness>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FF000000"/>
			<Setter Property="FontWeight" Value="Bold"/>
        </Style>     
		
        <Style x:Name="CellStyle" x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,0,0,0" />
        </Style>     
		
