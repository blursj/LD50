<Window x:Class="OPCClientProxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:self ="clr-namespace:OPCClientProxy"
        Icon="Images/opc.ico"
        xmlns:model="clr-namespace:OPCClientProxy_Model;assembly=OPCClientProxy_Model"
        Title="OPCClient代理" Height="450" Width="525">
    <Window.Resources>
        <ResourceDictionary>
            <self:BoolToVisibility1 x:Key="convert1"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--<GroupBox Grid.Row="0" Grid.Column="0" BorderBrush="Green" BorderThickness="1.5" Header="OPCServer服务器列表">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="本机IP地址:" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TextBox VerticalAlignment="Center" Height="26" Width="120" Grid.Column="1" Margin="4,2,4,2" Text="{Binding OPCServersVMInstance.ServerIP}"/>
                    <Button Height="26" Width="120" Grid.Column="2" Margin="4,2,4,2" VerticalAlignment="Center" Content="枚举OPCServer" Command="{Binding OPCServersVMInstance.GetOPCServerList, Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,5,0,0" >
                    <DataGrid ItemsSource="{Binding  OPCServersVMInstance.OPCServersManager}" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="OPCServer名称" Binding="{Binding OPCServerName}"/>
                            <DataGridTextColumn Header="是否连接" Binding="{Binding IsLinked}"/>
                            <DataGridTemplateColumn Header="操作">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <WrapPanel Orientation="Horizontal">
                                            <Button Width="100" Height="26" Content="连接" Margin="4,2,2,3" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type self:MainWindow}},Path=DataContext.OPCServersVMInstance.LinkServer}" CommandParameter="{Binding RelativeSource={RelativeSource Self},Path=DataContext}"/>
                                            <Button Width="100" Height="26" Content="断开连接" Margin="3,2,2,3" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type self:MainWindow}},Path=DataContext.OPCServersVMInstance.CloseLinkServer}" CommandParameter="{Binding RelativeSource={RelativeSource Self},Path=DataContext}"/>
                                            <Button Width="100" Height="26" Content="枚举变量" Margin="3,2,2,3" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type self:MainWindow}},Path=DataContext.OPCServersVMInstance.GetItemList}" CommandParameter="{Binding RelativeSource={RelativeSource Self},Path=DataContext}"/>
                                        </WrapPanel>
